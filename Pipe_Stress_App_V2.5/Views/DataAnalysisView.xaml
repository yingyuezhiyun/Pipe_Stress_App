                                                Height="50"
                                                VerticalAlignment="Center"
                                                Command="{Binding PauseLoadInputFileCommand}"
                                                CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                                                Cursor="Hand"
                                                IsChecked="True"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                ToolTip="暂停">
                                                <materialDesign:PackIcon>
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="PlayCircleOutline" />
                                                            <Setter Property="Width" Value="40" />
                                                            <Setter Property="Height" Value="40" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                                    <Setter Property="Kind" Value="PauseCircleOutline" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:ChangePropertyAction
                                                            PropertyName="ToolTip"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                                            Value="暂停" />
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:ChangePropertyAction
                                                            PropertyName="ToolTip"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                                            Value="继续" />

                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>

                                            </ToggleButton>
                                            <Button
                                                Width="50"
                                                Height="50"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                Command="{Binding ExecuteCommand}"
                                                CommandParameter="中止文件加载"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                ToolTip="中止">
                                                <materialDesign:PackIcon
                                                    Width="40"
                                                    Height="40"
                                                    Kind="StopCircleOutline" />
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsChecked"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="False" />
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsEnabled"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="False" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>
                                            <Button
                                                Width="50"
                                                Height="50"
                                                VerticalAlignment="Center"
                                                Command="{Binding ExecuteCommand}"
                                                CommandParameter="返回文件加载页"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                ToolTip="返回加载">
                                                <Path
                                                    Width="30"
                                                    Height="30"
                                                    Data="M585.2 255.1h-354l118.5-118.5c16.4-16.4 16.4-42.9 0-59.2-16.4-16.4-42.9-16.4-59.2 0L104.7 263.1c-9 9-12.8 21-12 32.7-0.9 11.7 3 23.7 12 32.7l185.7 185.7c8.2 8.2 18.9 12.3 29.6 12.3s21.4-4.1 29.6-12.3c16.4-16.4 16.4-42.9 0-59.2L233.5 338.9h346.4c146.3 0 269.6 115.2 272.9 261.5 3.4 150.3-117.9 273.7-267.5 273.7h-53.6c-0.6 0-1.3-0.1-1.9-0.1H170.3c-0.7 0-1.3 0.1-1.9 0.1-20 0.9-36.2 15.7-39.4 35v13.8c3.2 19.2 19.4 34 39.2 35H579c192.6 0 354-152.4 357.5-344.9 3.6-196.7-155.4-357.9-351.3-357.9z"
                                                    Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    Stretch="Uniform" />
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsEnabled"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="True" />
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsChecked"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="True" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>

                                        </StackPanel>
                                    </StackPanel>

                                </materialDesign:TransitionerSlide>
                            </materialDesign:Transitioner>
                        </StackPanel>
