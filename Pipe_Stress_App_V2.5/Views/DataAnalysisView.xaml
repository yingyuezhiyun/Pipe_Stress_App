                                                    Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                                    Stretch="Uniform" />
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsEnabled"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="True" />
                                                        <i:ChangePropertyAction
                                                            PropertyName="IsChecked"
                                                            TargetObject="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[0]}"
                                                            Value="True" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>

                                        </StackPanel>
                                    </StackPanel>

                                </materialDesign:TransitionerSlide>
                            </materialDesign:Transitioner>
                        </StackPanel>
                    </TabItem>

                    <TabItem Width="40">
                        <TabItem.Header>
                            <TextBlock
                                HorizontalAlignment="Center"
                                RenderTransformOrigin=".5,.5"
                                Text="通道">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </TabItem.Header>

                        <ContentControl VerticalAlignment="Center" prism:RegionManager.RegionName="{x:Static ext:PrismManager.DataAnalysisChannelSelectViewRegionName}" />

                    </TabItem>

                </TabControl>
            </materialDesign:Card>



        </Grid>

    </Grid>
</UserControl>
