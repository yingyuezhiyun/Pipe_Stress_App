        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>


        <materialDesign:Card
            Grid.Column="0"
            Margin="10,0,10,10"
            UniformCornerRadius="20">
            <ContentControl Margin="15" prism:RegionManager.RegionName="{x:Static ext:PrismManager.DataAnalysisChartViewRegionName}" />
        </materialDesign:Card>



        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="240" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <materialDesign:Card Margin="10,0,10,10" UniformCornerRadius="20">
                <ContentControl Margin="0" prism:RegionManager.RegionName="{x:Static ext:PrismManager.DataAnalysisFFTChartViewRegionName}" />
            </materialDesign:Card>
            <materialDesign:Card
                Grid.Row="1"
                Margin="10"
                UniformCornerRadius="20">
                <TabControl
                    Margin="10"
                    materialDesign:NavigationRailAssist.SelectionCornerRadius="10"
                    materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                    Background="Transparent"
                    SelectedIndex="{Binding InputConfi.SelectType}"
                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                    TabStripPlacement="Right">

                    <TabItem Width="40">
                        <TabItem.Header>
                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Center"
                                RenderTransformOrigin=".5,.5"
                                Text="单文件">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </TabItem.Header>
                        <StackPanel VerticalAlignment="Center">
                            <Image
                                Width="190"
                                Height="190"
                                Margin="20,0,20,0"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/Images/SingleFile.png"
                                UseLayoutRounding="True" />

                            <materialDesign:Transitioner
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                SelectedIndex="{Binding LoadFileSelectIndex, FallbackValue=0}">


                                <materialDesign:TransitionerSlide>
                                    <StackPanel HorizontalAlignment="Center">
                                        <Button
                                            Width="70"
                                            Height="70"
                                            VerticalAlignment="Center"
                                            Command="{Binding ExecuteCommand}"
                                            CommandParameter="开始加载"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="开始加载">
                                            <materialDesign:PackIcon
                                                Width="60"
                                                Height="60"
                                                Kind="MotionPlayOutline" />
                                        </Button>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox
                                                Width="150"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="文件目录"
                                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                Text="{Binding InputConfi.FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <Button
                                                VerticalAlignment="Bottom"
                                                Command="{Binding ExecuteCommand}"
                                                CommandParameter="输入文件目录"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                ToolTip="设置文件位置">
                                                <materialDesign:PackIcon Kind="FileEditOutline" />
                                            </Button>
                                            <Button
                                                VerticalAlignment="Bottom"
                                                Command="{Binding ExecuteCommand}"
                                                CommandParameter="打开输入文件目录"
                                                DockPanel.Dock="Right"
                                                Style="{StaticResource MaterialDesignToolButton}"
                                                ToolTip="打开文件">
                                                <materialDesign:PackIcon Kind="Share" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </materialDesign:TransitionerSlide>


