                                                <ProgressBar
                                                    Width="60"
                                                    Height="60"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsIndeterminate="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Children[1].Children[0].IsChecked}"
                                                    Maximum="{Binding InputConfi.Num}"
                                                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                    Value="{Binding InputConfi.CurrentIndex}" />
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Vertical">
                                                    <TextBlock
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding InputConfi.CurrentIndex}" />
                                                    <Border
                                                        Grid.Column="1"
                                                        Margin="2"
                                                        BorderBrush="{DynamicResource MaterialDesignBody}"
                                                        BorderThickness="0,0,0,0.8" />
                                                    <TextBlock
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding InputConfi.Num}" />

                                                </StackPanel>
                                            </Grid>
